################################################################################
# VPC
################################################################################

output "vpc_id" {
  description = "作成したVPCのID"
  value       = aws_vpc.main.id
}

################################################################################
# Internet Gateway
################################################################################

output "internet_gateway_id" {
  description = "作成したインターネットゲートウェイのID"
