}

################################################################################
# Public Subnets
################################################################################

output "public_subnet_ids" {
  description = "作成したPublic SubnetのID"
  value       = values(aws_subnet.public).*.id
}

################################################################################
# Private Subnets
################################################################################

output "private_subnet_ids" {
  description = "作成したPrivate SubnetのID"
  value       = values(aws_subnet.private).*.id
}

